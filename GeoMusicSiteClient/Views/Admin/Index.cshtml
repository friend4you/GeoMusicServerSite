@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container">
    <div class="row">        
        <div class="col-md-9 col-sm-8">
            <h1 class="page-header">
                Admin Panel                
            </h1>      
            <table>
                <tr>
                    <th>
                        Имя
                    </th>
                    <th>
                        Email
                    </th>
                    <th>

                    </th>
                </tr>

                @foreach (var user in ViewBag.Users)
                {
                    <tr>
                        <td>
                            @user.UserName    |                
                        </td>
                        <td>
                            @user.Email       |                    
                        </td>
                        <td>
                            @Html.ActionLink("Редактировании", "Edit", new { id = user.Id }) |                            
                            @Html.ActionLink("Удалить", "Delete", new { id = user.Id })
                        </td>
                    </tr>
                }
            </table>                  
        </div>
    </div>
    <!-- /.row -->
</div>